<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.twentyone.MainActivity"
    android:background="@drawable/blackjack">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_text"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/player_result_text"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:layout_above="@+id/dealer_result_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="DEAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDeal"
        android:onClick="buttonDeal"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginBottom="36dp"
        android:layout_alignBottom="@+id/buttonStand"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textStyle="bold"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/stand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStand"
        android:onClick="buttonStand"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/buttonHit"
        android:layout_alignBottom="@+id/buttonHit"
        android:layout_toRightOf="@+id/buttonDeal"
        android:layout_toEndOf="@+id/buttonDeal"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/dealer_result_text"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textStyle="bold"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:layout_above="@+id/result_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonHit"
        android:text="@string/hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="buttonHit"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_above="@+id/player_result_text"
        android:layout_toLeftOf="@+id/buttonDeal"
        android:layout_toStartOf="@+id/buttonDeal" />


</RelativeLayout>
