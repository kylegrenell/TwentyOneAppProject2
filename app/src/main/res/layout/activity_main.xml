<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.twentyone.MainActivity"
    android:background="@drawable/screenpink">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="DEAL"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/buttonDeal"
        android:onClick="buttonDeal"
        android:background="#cceada"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="@string/stand"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/buttonStand"
        android:onClick="buttonStand"
        android:background="#fcf7f9"
        android:textColor="#000000"
        android:layout_above="@+id/player_result_text"
        android:layout_toRightOf="@+id/result_text"
        />

    <Button
        android:id="@+id/buttonHit"
        android:text="@string/hit"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:onClick="buttonHit"
        android:textColor="#000000"
        android:background="#fcf7f9"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/result_text"
        android:textSize="13dp"
        android:textColor="#000000"
        android:background="#fcf0f5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/buttonDeal"
        android:layout_alignStart="@+id/buttonDeal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/hand_display"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:textAlignment="center"
        android:layout_below="@+id/player_result_text"
        android:layout_alignRight="@+id/buttonStand"
        android:layout_alignEnd="@+id/buttonStand"
        android:layout_alignLeft="@+id/player_result_text"
        android:layout_alignStart="@+id/player_result_text"/>

    <TextView
        android:id="@+id/player_result_text"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/buttonHit"
        android:layout_alignRight="@+id/buttonStand"
        android:layout_alignEnd="@+id/buttonStand"
        android:layout_alignLeft="@+id/buttonHit"
        android:layout_alignStart="@+id/buttonHit"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/dealer_hand_display"
        android:textSize="13dp"
        android:textColor="#000000"
        android:background="#fcf7f9"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonStand"
        android:layout_alignEnd="@+id/buttonStand"
        android:layout_alignLeft="@+id/dealer_result_text"
        android:layout_alignStart="@+id/dealer_result_text"/>

    <TextView
        android:id="@+id/dealer_result_text"
        android:textSize="13dp"
        android:textColor="#000000"
        android:background="#fcf7f9"
        android:textStyle="bold"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:layout_above="@+id/dealer_hand_display"
        android:layout_alignRight="@+id/buttonStand"
        android:layout_alignEnd="@+id/buttonStand"
        android:layout_alignLeft="@+id/hand_display"
        android:layout_alignStart="@+id/hand_display"/>


</RelativeLayout>
